<div class="container">
    {{ form_start(form , {'attr':{'novalidate':'novalidate'}}) }}
    <div class="form-group">

    <div class="form-group">
        {{ form_label(form.price," Please Enter The quantity of product")  }}
        {{ form_widget(form.price , {'attr':{'class':'form-control'} }) }}
        {% if form_errors(form.price) is not empty %}
            <div class="alert alert-danger">
                {{ form_errors(form.price) }}
            </div>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.quantity," Please Enter The Price")  }}
        {{ form_widget(form.quantity , {'attr':{'class':'form-control'} }) }}
        {% if form_errors(form.quantity) is not empty %}
            <div class="alert alert-danger">
                {{ form_errors(form.quantity) }}
            </div>
        {% endif %}
    </div>




</div>







<div>
<button>{{ button_label|default('Checkout') }}</button>
{{ form_end(form) }}
