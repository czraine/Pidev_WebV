{% extends 'base.html.twig' %}

{% block title %}PlaceReviews{% endblock %}

{% block body %}
    <h1>PlaceReviews</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ReviewId</th>
                <td>{{ place_review.reviewId }}</td>
            </tr>
            <tr>
                <th>PlaceName</th>
                <td>{{ place_review.placeName }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ place_review.rating }}</td>
            </tr>
            <tr>
                <th>ReviewTxt</th>
                <td>{{ place_review.reviewTxt }}</td>
            </tr>
            <tr>
                <th>ReviewDate</th>
                <td>{{ place_review.reviewDate ? place_review.reviewDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_place_reviews_index') }}">back to list</a>

    <a href="{{ path('app_place_reviews_edit', {'reviewId': place_review.reviewId}) }}">edit</a>

    {{ include('place_reviews/_delete_form.html.twig') }}
{% endblock %}
