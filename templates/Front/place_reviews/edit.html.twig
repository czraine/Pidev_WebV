{% extends 'place_reviews/base.html.twig' %}

{% block title %}Edit PlaceReviews{% endblock %}

{% block body %}
    <h1>Edit PlaceReviews</h1>
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Place to visite Tables</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Home</a>
							</li>
							<li class="breadcrumb-item active">Place to visite Tables</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-14">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">DataTable of Place to visite</h3>
							</div>
							<!-- /.card-header -->
							<div class="card-body">
								<table id="example2" class="table table-bordered table-hover">
        <tbody>

    <tr>
{% if not form.vars.valid %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.placeName, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.rating, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.reviewTxt, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.place, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.reviewDate, {'attr': {'class': 'form-control'}}) }}
            </div>
    {% endif %}
    {{ form_start(form) }}
        {{ form_row(form.placeName, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.rating, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.reviewTxt, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.place, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.reviewDate, {'attr': {'class': 'form-control'}}) }}
{{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
    <a href="{{ path('app_place_reviews_index') }}">back to list</a>
    {{ include('place_reviews/_delete_form.html.twig') }}
     </tbody>
    </table>
</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
